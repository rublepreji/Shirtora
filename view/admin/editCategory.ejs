    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Add Category | Shirtora Admin</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <style>
            .showError{
                color: red;
            }
        </style>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </head>

    <body class="bg-gray-50 min-h-screen flex font-inter overflow-hidden">
        <!-- sideBar -->
        <aside
        class="w-64 bg-white shadow-md hidden md:flex flex-col fixed h-full"
        >
        <%- include("../../view/partials/admin/sideBar") %>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 md:ml-64 p-6 md:p-10 transition-all duration-300">
        <!-- Page Title -->
        <h1 class="text-xl md:text-2xl font-semibold text-gray-800 mb-8">
            Edit Category
        </h1>

        <!-- Form Card -->
        <div
            class="max-w-3xl mx-auto bg-white shadow-md rounded-2xl p-8 border border-gray-200"
        >
            <h2 class="text-2xl font-semibold text-center mb-8 text-gray-800">
            Edit Category
            </h2>

            <form
            id="addCategoryForm"
            class="space-y-6"
            
            >
            <!-- Name -->
            <div class="flex flex-col md:flex-row items-center md:items-start gap-4">
                <label
                for="name"
                class="w-32 text-gray-700 font-medium text-sm md:text-base"
                >Name:</label
                >
                <input
                type="text"
                id="name"
                name="name"
                value="<%=category.name%>"
                placeholder="Enter category name"
                class="flex-1 px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-400 focus:outline-none"
                />
                <div id="error-name" class="showError"></div>
            </div>
            <input type="hidden" id="id" name="id" value="<%=category._id%>" type="text" >
            <!-- Description -->
            <div class="flex flex-col md:flex-row items-center md:items-start gap-4">
                <label
                for="description"
                class="w-32 text-gray-700 font-medium text-sm md:text-base"
                >Description:</label
                >
                <textarea
                id="description"
                name="description"
                rows="3"
                
                placeholder="Enter category description"
                class="flex-1 px-4 py-2 border border-gray-300 rounded-md resize-none focus:ring-2 focus:ring-indigo-400 focus:outline-none"
                value="something"
                ><%=category.description%></textarea>
                <div id="error-description" class="showError"></div>
            </div>

            <!-- List / Unlist Toggle -->
            <!-- <div
                class="flex flex-col md:flex-row items-center justify-between gap-4 mt-4"
            >
                <div></div>
                <div class="flex items-center gap-3">
                <label class="text-gray-700 font-medium text-sm md:text-base"
                    >List / Unlist :</label
                >
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" name="isListed" class="sr-only peer" checked />
                    <div
                    class="w-11 h-6 bg-gray-300 rounded-full peer peer-checked:bg-indigo-500 transition-all duration-300"
                    ></div>
                    <div
                    class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-all duration-300 peer-checked:translate-x-5"
                    ></div>
                </label>
                </div>
            </div> -->

            <!-- Submit Button -->
            <div class="text-center mt-8">
                <button
                type="submit"
                class="bg-indigo-500 hover:bg-indigo-600 text-white px-8 py-2 rounded-lg shadow-md font-medium transition duration-300"
                >
                Add
                </button>
            </div>
            </form>
        </div>
        </main>
    </body>
    </html>

    <script src="/js/admin/editCategory.js"></script>
