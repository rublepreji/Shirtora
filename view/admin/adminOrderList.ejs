    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<%-include('../../view/partials/admin/sideBar')%>
<body>

    <!-- Sidebar already included above as partial -->

<!-- MAIN CONTENT AREA -->
<div class="ml-64 p-6 md:p-10 min-h-screen bg-white">

    <!-- Search Bar -->
    <div class="flex justify-center mb-8">
        <div class="w-full max-w-xl relative">
            <input 
                type="text"
                placeholder="Search"
                class="w-full px-5 py-3 rounded-full bg-gray-100 
                       focus:bg-white border border-gray-200 
                       focus:border-gray-400 outline-none"
            />
            <svg class="w-5 h-5 absolute right-5 top-3.5 text-gray-400"
                fill="none" stroke="currentColor" stroke-width="2"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M21 21l-4.35-4.35m1.2-5.4a7.2 7.2 0 11-14.4 0 7.2 7.2 0 0114.4 0z" />
            </svg>
        </div>
    </div>

    <!-- Heading -->
    <h2 class="text-2xl font-semibold mb-6">Order list</h2>

    <!-- Filters Row -->
    <div class="flex flex-wrap gap-4 mb-8">

        <button class="flex items-center gap-2 px-4 py-2 border rounded-lg bg-gray-100 text-gray-700">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M3.75 6h16.5M5.25 12h13.5M7.5 18h9" />
            </svg>
            Filter By
        </button>

        <div class="px-4 py-2 border rounded-lg flex items-center gap-2 bg-gray-100 cursor-pointer">
            14 Feb 2019
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
        </div>

        <div class="px-4 py-2 border rounded-lg flex items-center gap-2 bg-gray-100 cursor-pointer">
            Order Type
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
        </div>

        <div class="px-4 py-2 border rounded-lg flex items-center gap-2 bg-gray-100 cursor-pointer">
            Order Status
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
        </div>

    </div>

    <!-- Table Wrapper -->
    <div class="overflow-x-auto">
        <table class="w-full text-left border-separate border-spacing-y-4">
            <thead>
                <tr class="text-gray-600 text-sm">
                    <th class="pb-2">PRODUCT</th>
                    <th class="pb-2">USER</th>
                    <th class="pb-2">ADDRESS</th>
                    <th class="pb-2">Price</th>
                    <th class="pb-2">DATE</th>
                    <th class="pb-2">STATUS</th>
                    <th></th>
                </tr>
            </thead>

            <tbody class="text-sm">
                <!-- Example static row -->
                <%orders.forEach((data,i)=>{%>
                <tr class="bg-white shadow-sm">
                    <td class="p-2 font-medium"><%=data.items[0].productId.productName%></td>
                    <td class="p-2"><%=data.address.firstName%> <%=data.address.lastName%></td>
                    <td class="p-2"><%=data.address.addressLine%></td>
                    <td class="p-2"><%=data.totalAmount%></td>
                    <td class="p-2"><%=new Date(data.createdAt).toDateString()%></td>

                    <td class="p-2">
                        <span class="px-3 py-1 rounded-full text-xs font-semibold text-green-600 bg-green-100">
                            <%=data.status%>
                        </span>
                    </td>

                    <td class="p-2">
                        <a href="/admin/orderdetails/<%=data._id%>">
                            <button class="p-2 border rounded-md hover:bg-gray-100">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2"
                                viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M15.232 5.232l3.536 3.536M9 11l6-6m-6 6v3h3l6-6m-3 13H6a2 2 0 01-2-2V6a2 2 0 012-2h7" />
                            </svg>
                        </button>
                        </a>
                    </td>

                </tr>
                <%})%>
            </tbody>
        </table>
    </div>

</div>

</body>
</html>