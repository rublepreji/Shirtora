<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products | Shirtora Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/2.0.1/cropper.min.js" integrity="sha512-oauBT2O30tZXAL0UZqmigDAGOBg2GlaKlf6dOBz1V1Y8bBvdHcVzF4lZCCb9dIB1L+B96xDgO+Jy4NR4OwR8fw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>

  <body class="bg-gray-50 text-gray-800">
    <!-- Sidebar is already included as partial -->
    <%-include("../../view/partials/admin/sideBar")%>
    <!-- Main Section -->
    <div class="ml-64 p-6"> <!-- Adjust ml based on sidebar width -->
      <!-- Header -->
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6">
        <h1 class="text-2xl font-semibold mb-3 sm:mb-0">Products</h1>

        <div class="flex items-center space-x-4">
          <input
            type="text"
            placeholder="Search"
            class="w-64 border border-gray-300 rounded-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          
        </div>
        <div></div>
        <div></div>
      </div>

      <!-- Filter Section -->
      <div class="bg-white p-4 rounded-lg shadow-sm flex flex-col sm:flex-row justify-between items-center mb-6">
      <!-- Left section: Filters -->
      <div class="flex flex-col sm:flex-row gap-4 items-center">
       

    <div class="flex items-center space-x-2">
      <span class="text-gray-600 font-medium">Category</span>
      <select
        class="border border-gray-300 rounded-md px-3 py-1 focus:ring focus:ring-blue-200"
      >
        <option>All</option>
        <option>Formal</option>
        <option>T-shirt</option>
        <option>Casual</option>
      </select>
    </div>
  </div>

  <!-- Right section: Add button -->
  <a href="/admin/addproduct" class="mt-3 sm:mt-0">
    <button
      class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition"
    >
      + Add New Product
    </button>
  </a>
</div>


      <!-- Products Table -->
      <div class="overflow-x-auto bg-white rounded-lg shadow-sm">
        <table class="min-w-full text-sm text-left">
          <thead class="bg-gray-100 text-gray-700">
            <tr>
              <th class="py-3 px-4 font-medium">Image</th>
              <th class="py-3 px-4 font-medium">Product Name</th>
              <th class="py-3 px-4 font-medium">Category</th>
              <th class="py-3 px-4 font-medium">Brand</th>
              <th class="py-3 px-4 font-medium">Variants</th>
              <th class="py-3 px-4 font-medium text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <!-- Row 1 -->
            <%product.forEach((val,index)=>{%>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-3 px-4">
                <img src="<%=val.productImage[0]%>" class="rounded-md w-12 h-12 object-cover" alt="" />
              </td>
              <td class="py-3 px-4">
                <p class="font-semibold"><%=val.productName%></p>
              </td>
              <td class="py-3 px-4"><%=val.category%></td>
              <td class="py-3 px-4"><%=val.brand%></td>
              <td class="py-3 px-4">
                <%val.variants.forEach((variant,index)=>{%>
                <p>Size: <%=variant.size%></p>
                <p>Price: <%=variant.price%></p>
                <p>Stock: <%=variant.stock%></p>
                <%})%>
              </td>
              <td class="py-3 px-4 text-center space-x-2">
                <a href="/admin/editproduct/<%=val._id%>"><button class="text-blue-500 hover:text-blue-700"><i class="fa fa-edit"></i>✏️</button></a>
                <%if(!val.isBlocked){%>
                <button data-action="blockproduct" data-id="<%=val._id%>" class="block-btn text-xs bg-orange-100 text-orange-600 px-2 py-1 rounded-md">Block</button>
                <%}else{%>
                  <button data-action="unblockproduct" data-id="<%=val._id%>" class="unblock-btn bg-green-100 text-green-700 px-3 py-1 rounded-md text-sm font-medium">Unblock</button>
                <%}%>
              </td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>


    <script>
      const buttons = document.querySelectorAll('.block-btn, .unblock-btn')
      buttons.forEach(button=>{
        button.addEventListener('click',async(e)=>{
          const btn= e.currentTarget
          const action= btn.dataset.action
          const productId= btn.dataset.id
          
          const isBlock= action=="blockproduct"
          const titleText= isBlock?"Block this product":"Unblock this product"
          const confirmText= isBlock?"Yes, block":"Yes, Unblock"
          const successText= isBlock?"Product has been blocked":"Product has been unblocked"

        const result = await Swal.fire({
          title: titleText,
          text: "Are you sure you want to proceed?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: isBlock ? "#d33" : "#3085d6",
          cancelButtonColor: "#aaa",
          confirmButtonText: confirmText,
          });
          if(result.isConfirmed){
            try {
              const response= await fetch(`/admin/${action}`,{
                method:"put",
                headers: { "Content-Type": "application/json" },
                body:JSON.stringify({id:productId})
              })
              const data=await response.json()
              if(data.success){ 
                if(action =="blockproduct"){
                  btn.textContent="Unblock"
                  btn.className="unblock-btn bg-green-100 text-green-700 px-3 py-1 rounded-md text-sm font-medium"
                  btn.dataset.action='unblockproduct'
                }
                else{
                  btn.textContent="block"
                  btn.className="block-btn text-xs bg-orange-100 text-orange-600 px-2 py-1 rounded-md block-btn"
                  btn.dataset.action='blockproduct'
                }
                Swal.fire({
                title: "Success!",
                text: successText,
                icon: "success",
                timer: 1200,
                showConfirmButton: false
            })
              }
              else{
                Swal.fire("Error!", "Action failed. Try again.", "error");
              }
            } catch (error) {
               Swal.fire("Error!", "Something went wrong!", "error");
              console.error("Error on brand UI:", error);
            }
          }         
        })
      })
    </script>

  </body>
</html>
