<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products | Shirtora Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/2.0.1/cropper.min.js" integrity="sha512-oauBT2O30tZXAL0UZqmigDAGOBg2GlaKlf6dOBz1V1Y8bBvdHcVzF4lZCCb9dIB1L+B96xDgO+Jy4NR4OwR8fw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  </head>

  <body class="bg-gray-50 text-gray-800">
    <!-- Sidebar is already included as partial -->
    <%-include("../../view/partials/admin/sideBar")%>
    <!-- Main Section -->
    <div class="ml-64 p-6"> <!-- Adjust ml based on sidebar width -->
      <!-- Header -->
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6">
        <h1 class="text-2xl font-semibold mb-3 sm:mb-0">Products</h1>

        <div class="flex items-center space-x-4">
          <input
            type="text"
            placeholder="Search"
            class="w-64 border border-gray-300 rounded-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <a href="/admin/addproduct">
          <button class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition">
            + Add New Product
          </button>
          </a>
        </div>
      </div>

      <!-- Filter Section -->
      <div class="bg-white p-4 rounded-lg shadow-sm flex flex-col sm:flex-row gap-4 items-center mb-6">
        <div class="flex items-center space-x-2">
          <span class="text-gray-600 font-medium">Filter By</span>
          <input type="date" class="border border-gray-300 rounded-md px-3 py-1 focus:ring focus:ring-blue-200" />
        </div>

        <div class="flex items-center space-x-2">
          <span class="text-gray-600 font-medium">Category</span>
          <select class="border border-gray-300 rounded-md px-3 py-1 focus:ring focus:ring-blue-200">
            <option>All</option>
            <option>Formal</option>
            <option>T-shirt</option>
            <option>Casual</option>
          </select>
        </div>
      </div>

      <!-- Products Table -->
      <div class="overflow-x-auto bg-white rounded-lg shadow-sm">
        <table class="min-w-full text-sm text-left">
          <thead class="bg-gray-100 text-gray-700">
            <tr>
              <th class="py-3 px-4 font-medium">Image</th>
              <th class="py-3 px-4 font-medium">Product Name</th>
              <th class="py-3 px-4 font-medium">Category</th>
              <th class="py-3 px-4 font-medium">Brand</th>
              <th class="py-3 px-4 font-medium">Variants</th>
              <th class="py-3 px-4 font-medium text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <!-- Row 1 -->
            <%product.forEach((val,index)=>{%>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-3 px-4">
                <img src="<%=val.productImage[0]%>" class="rounded-md w-12 h-12 object-cover" alt="" />
              </td>
              <td class="py-3 px-4">
                <p class="font-semibold"><%=val.productName%></p>
              </td>
              <td class="py-3 px-4"><%=val.category%></td>
              <td class="py-3 px-4"><%=val.brand%></td>
              <td class="py-3 px-4">
                <%val.variants.forEach((variant,index)=>{%>
                <p>Size: <%=variant.size%></p>
                <p>Price: <%=variant.price%></p>
                <p>Stock: <%=variant.stock%></p>
                <%})%>
              </td>
              <td class="py-3 px-4 text-center space-x-2">
                <button class="text-blue-500 hover:text-blue-700"><i class="fa fa-edit"></i>✏️</button>
                <button class="bg-green-100 text-green-700 px-3 py-1 rounded-md text-sm font-medium">Unblock</button>
              </td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
