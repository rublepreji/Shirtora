<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <!-- Load Tailwind CSS from CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Configure Tailwind for Inter font -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f7f7f7;
        }
        .errorDisplay{
            border-radius: 5px;
            color: rgb(214, 0, 0);
        }
    </style>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'zion-blue': '#8b9af9',
                        'zion-dark': '#333333',
                    }
                }
            }
        }
    </script>
</head>
<body class="min-h-screen flex items-center justify-center p-4">

    <!-- Login Card Container -->
    <div class="w-full max-w-sm p-8 bg-white rounded-xl shadow-xl transition-all duration-300">

        <!-- Header -->
        <h1 class="text-2xl font-bold text-zion-dark text-center mb-10 mt-2">
            Admin Login
        </h1>

        <!-- Form -->
        <form id="loginForm" method="post" action="/admin/login" class="space-y-6" novalidate>

            <!-- Email Input -->
            <div>
                <!-- The input border is visibly lighter/bluer in the example, 
                     so we use an explicit class to replicate this appearance on focus/active state. -->
                <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Email"
                    class="w-full px-4 py-3 text-sm rounded-lg border border-gray-300 focus:outline-none focus:ring-1 focus:ring-blue-400 focus:border-blue-400 placeholder-gray-500 transition duration-150 ease-in-out"
                    
                >
            </div>
            <div class="errorDisplay" id="emailError"></div>

            <!-- Password Input -->
            <div>
                <!-- The password input is simpler, just having a standard placeholder and border. -->
                <input
                    type="password"
                    name="password"
                    id="password"
                    placeholder="Password"
                    class="w-full px-4 py-3 text-sm rounded-lg border border-gray-300 focus:outline-none focus:ring-1 focus:ring-blue-400 focus:border-blue-400 placeholder-gray-500 transition duration-150 ease-in-out" 
                >
            </div>
            <div class="errorDisplay" id="passwordError"></div>

            <!-- Log in Button -->
            <button
                type="submit"
                class="w-full py-3 mt-8 text-white font-medium bg-zion-blue rounded-lg transition duration-200 hover:bg-opacity-90 active:bg-opacity-80 shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-zion-blue focus:ring-offset-2"
            >
                Log in
            </button>
        </form>

    </div>

    <script>
        let form = document.getElementById('loginForm')
        let email= document.getElementById('email')
        let emailError= document.getElementById('emailError')
        let password= document.getElementById('password')
        let passwordError= document.getElementById('passwordError')

        

        form.addEventListener('submit',(e)=>{
            let valid=true

            emailError.style.display='none'
            passwordError.style.display='none'
            if(email.value.trim()==""){
                emailError.style.display='block'
                emailError.innerHTML='Email is required'
                valid=false
            }
            if(password.value.trim()==""){
                passwordError.style.display='block'
                passwordError.innerHTML="Password is required"
                valid=false
            }
            if(!valid){
                e.preventDefault()
            }
        })
    </script>

</body>
</html>
