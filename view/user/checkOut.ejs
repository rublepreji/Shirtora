<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Checkout — Billing Details</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <%- include("../../view/partials/user/header") %>

  <body class="antialiased text-gray-800 font-sans">

    <div class="max-w-7xl mx-auto px-6 py-12">

      <div class="text-sm text-gray-500 mb-6">
        Account / Product / View Cart / <span class="text-gray-900 font-medium">CheckOut</span>
      </div>

      <h1 class="text-3xl md:text-4xl font-semibold mb-8">Billing Details</h1>

      <div class="grid grid-cols-1 md:grid-cols-12 gap-8">

        <form id="checkoutForm" action="/placeorder" method="post" class="md:col-span-7">
          <section class="bg-white border border-gray-200 rounded-lg p-6">
            <h2 class="text-lg font-medium mb-4">Delivery Address</h2>

            <div class="space-y-4">

              <% if (addresses && addresses.length > 0) { %>

                <% addresses.forEach((addr, index) => { %>

                  <label class="flex justify-between items-start block relative rounded-md border-2 <%= addr.isDefault ? 'border-black' : 'border-gray-300' %> p-4 cursor-pointer">
                    
                    <div class="pr-10"> <input 
                        type="radio" 
                        name="address" 
                        value="<%= index %>" 
                        <%= addr.isDefault ? 'checked' : '' %>
                        class="absolute right-4 top-4 h-4 w-4 text-blue-600 focus:ring-blue-500" 
                      />

                      <p class="text-sm leading-relaxed text-gray-800">
                        <strong class="block">
                          <%= addr.firstName %> <%= addr.lastName %>
                        </strong> 
                        <%= addr.addressLine %><br>
                        <%= addr.city %>, <%= addr.state %><br>
                        <%= addr.pincode %><br>

                        <span class="text-sm text-gray-700">
                          Contact : +91 <%= addr.phone %>
                        </span>
                      </p>
                    </div>

                    <%if(addr.isDefault){%>
                    <span class="h-fit flex-none self-start inline-flex items-center text-xs font-semibold text-indigo-600 bg-indigo-100 px-2 py-0.5 rounded-full mt-0.5">
                        Default
                    </span>
                    <%}%>
                  </label>
                  
                  <% if (index === addresses.length - 1) { %>
                    <input type="hidden" name="selectedAddressIndex" id="selectedAddressIndex">
                    <input type="hidden" name="paymentMethod" id="paymentMethod">
                  <% } %>

                <% }) %>

              <% } else { %>
                <p class="text-red-500 text-sm">No address added yet</p>
              <% } %>

              <!-- <div class="pt-2">
                <button id="openModal" type="button" class="bg-black text-white px-5 py-3 rounded-md shadow-sm hover:bg-gray-800 transition-colors">Add New Address</button>
              </div> -->
            </div>
          </section>

          <section class="mt-8 bg-white border border-gray-200 rounded-lg p-6">
            <h3 class="text-lg font-medium mb-4">Payment Methods</h3>
            <p class="text-sm text-gray-500 mb-4">Select any payment methods</p>

            <fieldset class="space-y-4">
              <label class="flex items-center gap-3 cursor-pointer">
                <input type="radio" name="payment" value="UPI" class="h-4 w-4 text-blue-600 focus:ring-blue-500" />
                <span class="text-sm">UPI Method</span>
              </label>

              <label class="flex items-center gap-3 cursor-pointer">
                <input type="radio" name="payment" value="COD" class="h-4 w-4 text-blue-600 focus:ring-blue-500" />
                <span class="text-sm">Cash on Delivery</span>
              </label>
            </fieldset>
          </section>
        </form>
        
        <aside class="md:col-span-5">
          <div class="bg-white border border-gray-200 rounded-lg p-6 sticky top-6"> <ul class="divide-y divide-gray-200">

              <% cartItems.forEach(item => { %>

                <li class="flex items-center py-4">
                  <img src="<%= item.productId.productImage[0] %>" alt="product image" class="w-16 h-16 object-cover rounded flex-shrink-0" /> <div class="flex-1 ml-4 overflow-hidden"> <div class="text-sm font-medium truncate"><%= item.productId.name %></div> <div class="text-xs text-gray-600">Qty: <%= item.quantity %></div>
                  </div>

                  <div class="text-sm font-semibold ml-4">
                    ₹<%= item.productId.variants[item.variantIndex].price * item.quantity %>
                  </div>
                </li>
              <% }) %>
            </ul>
            <div class="mt-6 border-t border-gray-200 pt-4">
              <div class="flex justify-between text-sm text-gray-700 mb-2">
                <span>Subtotal:</span>
                <span class="font-medium">₹<%= subtotal %></span>
              </div>

              <div class="flex justify-between text-sm text-gray-700 mb-4">
                <span>Shipping:</span>
                <span class="font-medium">Free</span>
              </div>

              <div class="flex justify-between items-center text-base md:text-lg font-semibold mb-4 border-t pt-4 border-gray-300">
                <span>Total:</span>
                <span>₹<%= grandTotal %></span>
              </div>

              <button type="button" class="place-order-btn w-full bg-black text-white py-3 rounded place-order-btn hover:bg-gray-800 transition-colors">
                Place Order
              </button>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </body>
  <%- include("../../view/partials/user/footer") %>

<script>
  const RAZORPAY_KEY_ID = "<%= process.env.RAZORPAY_KEY_ID %>";
</script>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script src="/js/user/checkOut.js"></script>

</html>