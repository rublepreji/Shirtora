<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart - Shirtora</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
        }
        .cart-item-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
        }
        .quantity-input {
            width: 50px;
            text-align: center;
        }
        .logo-display {
            width: 70%;
        }
    </style>
</head>

<body class="min-h-screen bg-gray-50">

    <!--  Header should be inside body -->
    <%- include("../../view/partials/user/header") %>

    <div class="flex flex-col items-center py-8 px-4 sm:px-6 lg:px-8">

        <!-- Breadcrumb -->
        <div class="w-full max-w-5xl mb-8">
            <nav class="text-sm">
                <a href="/" class="text-gray-600 hover:text-gray-800">Home</a>
                <span class="mx-2 text-gray-400">/</span>
                <span class="text-gray-800 font-semibold">Cart</span>
            </nav>
        </div>

        <!-- Cart Section -->
       <div class="w-full max-w-5xl space-y-8">
            <div class="bg-white rounded-lg shadow p-6">
                <h1 class="text-2xl font-bold mb-6">Cart</h1>

                <% if (products.length > 0) { %>

                    <% products.forEach((item, i) => { %>
                    <div class="flex flex-col sm:flex-row items-center justify-between border-b pb-4 mb-4">

                        <div class="flex items-center space-x-4 mb-4 sm:mb-0">
                            <a href="/productdetails/<%=item.productId%>"><img src="<%= item.productImage[0] %>" class="cart-item-image rounded-md"></a>
                            <%if(item.status){%>
                                <p>This product is currently unavailable</p>
                            <%}else{%>
                            <div>
                                <p class="font-semibold"><%= item.productName %></p>
                               <% if(item.variant.stock<1){%>
                                    <p class="text-red-600 text-sm">Out Of Stock</p>
                                <%}else if(item.isBlocked){%>
                                    <p class="text-red-600 text-sm">Blocked</p>

                                <%}else if(item.stockNotAvailable){%>
                                    <p class="text-red-600 text-sm">Insufficient stock</p>
                                <%}else{%>
                                    <p class="text-green-600 text-sm">In Stock</p>
                                    <p class="text-600 text-sm">Size:<%=item.variant.size%></p>
                                      <div class="quantity-box flex items-center gap-2 mt-2">

                                    <button class="qty-minus bg-gray-200 hover:bg-gray-300 text-black px-2 py-1 rounded-md text-lg"
                                            data-product="<%= item.productId %>"
                                            data-variant="<%= item.variantIndex %>">
                                        -
                                    </button>

                                    <input 
                                        readonly
                                        value="<%= item.quantity %>"
                                        min="1"
                                        class="quantity-input w-14 text-center border rounded-md p-1 text-sm"
                                        data-product="<%= item.productId %>"
                                        data-variant="<%= item.variantIndex %>"
                                    >

                                    <button class="qty-plus bg-gray-200 hover:bg-gray-300 text-black px-2 py-1 rounded-md text-lg"
                                            data-product="<%= item.productId %>"
                                            data-variant="<%= item.variantIndex %>">
                                        +
                                    </button>

                                </div>

                                <%}%>
                                
                              
                            </div>
                            <%}%>
                        </div>

                        <div class="text-right flex flex-col items-end">
                            <p class="font-semibold">₹<%= item.totalPrice %></p>
                            
                            <button onclick="removeformcart('<%=item.productId%>','<%=item.variantIndex%>')" class="text-red-600 hover:text-red-800 text-sm mt-2">Remove</button>
                        </div>

                    </div>
                    <% }) %>

                <% } else { %>
                    <p class="text-center text-gray-500 py-6">Your cart is empty</p>
                <% } %>
                  
                <div class="flex justify-end pt-4">
                    <p class="text-lg font-bold">Total: ₹<%=grandTotal%></p>
                </div>
            </div>

            <!-- Bottom Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                <div class="logo-display flex justify-center">
                    <img src="/img/Logo.png" class="max-h-full max-w-full object-contain">
                </div>

                <div class="bg-white rounded-lg shadow p-6 h-fit">
                    <h2 class="text-xl font-bold mb-4">Cart Total</h2>

                    <div class="space-y-2">
                        <div class="flex justify-between">
                            <span>Subtotal:</span>
                            
                            <span class="font-semibold">₹<%=grandTotal%></span>
                        </div>

                        <div class="flex justify-between">
                            <span>Shipping:</span>
                            <span class="font-semibold">Free</span>
                        </div>

                        <div class="border-t pt-2 mt-2">
                            <div class="flex justify-between text-lg font-bold">
                                <span>Total:</span>
                                <span>₹<%=grandTotal%></span>
                            </div>
                        </div>
                    </div>

                    <a href="/checkout" id="checkoutBtn" data-cart-count="<%= products.length %>">
                        <button class="mt-6 w-full bg-black text-white py-3 rounded-md hover:bg-gray-800 transition">
                            Proceed to checkout
                        </button>
                    </a>
                </div>
            </div>
        </div>

    </div>
    <script src="/js/user/cart.js"></script>
</body>
<%-include("../../view/partials/user/footer")%>
</html>
