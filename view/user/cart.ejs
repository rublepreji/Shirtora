<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart - Shirtora</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
        }
        .cart-item-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
        }
        .quantity-input {
            width: 50px;
            text-align: center;
        }
        .logo-display {
            width: 70%;
        }
    </style>
</head>

<body class="min-h-screen bg-gray-50">

    <!-- ⭐ Header should be inside body -->
    <%- include("../../view/partials/user/header") %>

    <div class="flex flex-col items-center py-8 px-4 sm:px-6 lg:px-8">

        <!-- Breadcrumb -->
        <div class="w-full max-w-5xl mb-8">
            <nav class="text-sm">
                <a href="/" class="text-gray-600 hover:text-gray-800">Home</a>
                <span class="mx-2 text-gray-400">/</span>
                <span class="text-gray-800 font-semibold">Cart</span>
            </nav>
        </div>

        <!-- Cart Section -->
       <div class="w-full max-w-5xl space-y-8">
            <div class="bg-white rounded-lg shadow p-6">
                <h1 class="text-2xl font-bold mb-6">Cart</h1>

                <% if (products.length > 0) { %>

                    <% products.forEach((item, i) => { %>
                    <div class="flex flex-col sm:flex-row items-center justify-between border-b pb-4 mb-4">

                        <div class="flex items-center space-x-4 mb-4 sm:mb-0">
                            <img src="<%= item.productImage[0] %>" class="cart-item-image rounded-md">
                            <div>
                                <p class="font-semibold"><%= item.productName %></p>
                               <% if(item.variant.stock<1){%>
                                    <p class="text-red-600 text-sm">Out Of Stock</p>
                                <%}else{%>
                                    <p class="text-green-600 text-sm">In Stock</p>
                                    <p class="text-600 text-sm">Size:<%=item.variant.size%></p>
                                      <div class="quantity-box flex items-center gap-2 mt-2">

                                    <button class="qty-minus bg-gray-200 hover:bg-gray-300 text-black px-2 py-1 rounded-md text-lg"
                                            data-product="<%= item.productId %>"
                                            data-variant="<%= item.variantIndex %>">
                                        −
                                    </button>

                                    <input 
                                        readonly
                                        value="<%= item.quantity %>"
                                        min="1"
                                        class="quantity-input w-14 text-center border rounded-md p-1 text-sm"
                                        data-product="<%= item.productId %>"
                                        data-variant="<%= item.variantIndex %>"
                                    >

                                    <button class="qty-plus bg-gray-200 hover:bg-gray-300 text-black px-2 py-1 rounded-md text-lg"
                                            data-product="<%= item.productId %>"
                                            data-variant="<%= item.variantIndex %>">
                                        +
                                    </button>

                                </div>

                                <%}%>
                                
                              
                            </div>
                        </div>

                        <div class="text-right flex flex-col items-end">
                            <p class="font-semibold">₹<%= item.totalPrice %></p>
                            
                            <button onclick="removeformcart('<%=item.productId%>','<%=item.variantIndex%>')" class="text-red-600 hover:text-red-800 text-sm mt-2">Remove</button>
                        </div>

                    </div>
                    <% }) %>

                <% } else { %>
                    <p class="text-center text-gray-500 py-6">Your cart is empty</p>
                <% } %>
                  
                <div class="flex justify-end pt-4">
                    <%const grandTotal=products.reduce((acc,curr)=>acc+ curr.totalPrice,0)%>
                    <p class="text-lg font-bold">Total: ₹<%=grandTotal%></p>
                </div>
            </div>

            <!-- Bottom Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                <div class="logo-display flex justify-center">
                    <img src="/img/Logo.png" class="max-h-full max-w-full object-contain">
                </div>

                <div class="bg-white rounded-lg shadow p-6 h-fit">
                    <h2 class="text-xl font-bold mb-4">Cart Total</h2>

                    <div class="space-y-2">
                        <div class="flex justify-between">
                            <span>Subtotal:</span>
                            
                            <span class="font-semibold">₹<%=products.totalPrice%></span>
                        </div>

                        <div class="flex justify-between">
                            <span>Shipping:</span>
                            <span class="font-semibold">Free</span>
                        </div>

                        <div class="border-t pt-2 mt-2">
                            <div class="flex justify-between text-lg font-bold">
                                <span>Total:</span>
                                <span>₹<%=products.totalPrice%></span>
                            </div>
                        </div>
                    </div>

                    <button class="mt-6 w-full bg-black text-white py-3 rounded-md hover:bg-gray-800 transition">
                        Proceed to checkout
                    </button>
                </div>
            </div>
        </div>

    </div>
    <script>
        function removeformcart(productId, variantIndex){
        Swal.fire({
        icon: "warning",
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        showCancelButton: true,
        confirmButtonColor: "#f59e0b", 
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, proceed!"
        }).then(async(result)=>{
            if(result.isConfirmed){
                 const response= await fetch(`/removefromcart`,{
                    method:"post",
                    headers:{"Content-Type": "application/json"},
                    body:JSON.stringify({productId,variantIndex})
                })
                const data= await response.json()
                if(data.success){
                    Swal.fire({
                    icon: "success",
                    title: "Success!",
                    text:data.message || "Your action was completed successfully.",
                    confirmButtonColor: "#3085d6"
                    }).then(()=>{
                        window.location.reload();
                    })

                }else{
                    Swal.fire({
                    icon: "error",
                    title: "Oops!",
                    text: data.message || "Something went wrong. Please try again.",
                    confirmButtonColor: "#d33"
                    });

                }
            }
        })
        }


document.addEventListener("click", async function (e) {

   // MINUS BUTTON
if (e.target.classList.contains("qty-minus")) {
    const productId = e.target.dataset.product;
    const variantIndex = e.target.dataset.variant;

    const input = e.target.parentElement.querySelector(".quantity-input");
    let qty = parseInt(input.value);

    // Prevent below 1
    if (qty <= 1) return;

    const newQty = qty - 1;

    const res = await fetch("/updatecartqty", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, variantIndex, qty: newQty })
    });

    const data = await res.json();

    if (data.success) {
        input.value = newQty;  // Only update UI if backend approved
        window.location.reload();
    } else {
        Swal.fire({
            icon: "error",
            title: "Error",
            text: data.message || "Unable to reduce quantity."
        });
    }
}

    // PLUS BUTTON
   if (e.target.classList.contains("qty-plus")) {
    const productId = e.target.dataset.product;
    const variantIndex = e.target.dataset.variant;

    const input = e.target.parentElement.querySelector(".quantity-input");
    let qty = parseInt(input.value);

    if (qty >= 5) {
        Swal.fire({
            icon: "warning",
            title: "Limit Reached",
            text: "You can only add up to 5 units of this product."
        });
        return;
    }

    // DO NOT increase qty yet ❌
    // First send request to backend with (qty + 1)

    const newQty = qty + 1;

    const res = await fetch("/updatecartqty", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, variantIndex, qty: newQty })
    });

    const data = await res.json();

    if (data.success) {
        input.value = newQty;   // ✔ only increase when backend says OK
        window.location.reload();
    } else {
        Swal.fire({
            icon: "warning",
            title: "Stock Limited",
            text: data.message
        });
    }
}
})

    </script>
</body>
<%-include("../../view/partials/user/footer")%>
</html>
