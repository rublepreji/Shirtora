                        <a href="/auth/google"><span>Sign up with Google</span></a>
                    </button>
                    
                    <!-- Login Link -->
                    <p class="text-center text-gray-600 mt-8">
                        Already have account? 
                        <a href="/signin" class="text-black font-medium hover:underline">Log in</a>
                    </p>
                </div>
            </div>

        </div>
    </div>
    <script src="/js/user/signupPage.js"></script>
</body>
</html>
