<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Address Book</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* Optional: Add a smooth transition for responsiveness */
        .page-container {
            transition: padding-left 0.3s ease;
        }
    </style>
</head>

<body class="bg-gray-50 flex">
    <%-include("../../view/partials/user/sideBar")%>
    <div class="flex-grow min-h-screen p-4 md:p-8 md:pl-0 page-container">
        
        <div class="max-w-4xl mx-auto">
            <div class="flex flex-col md:flex-row justify-between text-sm text-gray-600 mb-6 border-b pb-4">
                
            </div>
    

            <div class="bg-white shadow-lg rounded-xl p-6 sm:p-8">
    
                <div class="flex justify-between items-center mb-6 border-b pb-4">
                    <h2 class="text-2xl font-bold text-gray-900">
                        My Address Book
                    </h2>
                    <a href="/addnewaddress"><button class="px-5 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition duration-150 text-sm font-semibold">
                        + Add New Address
                    </button>
                    </a>
                </div>
    
                <div id="addressDiv" class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        
                </div>
            </div>
            <div id="addressPagination" class="flex justify-center gap-2 mt-6"></div>
        </div>
    </div>

    <% if (session.message) { %>
<script>
window.onload = function () {
  Swal.fire({
    icon: 'success',
    title: "<%= session.message %>",
    showConfirmButton: false,
    timer: 1800
  });
}
</script>
<% session.message = null; %>
<% } %>
   <% if (session.error) { %>
<script>
window.onload = function () {
  Swal.fire({
    icon: 'error',
    title: "<%= session.error %>",
    showConfirmButton: false,
    timer: 1800
  });
}
</script>
<% session.error = null; %>
<% } %>

<script>
function deleteAddress(id) {
    Swal.fire({
        title: "Are you sure?",
        text: "This address will be permanently deleted.",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#d33",
        cancelButtonColor: "#3085d6",
        confirmButtonText: "Yes, delete it!"
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/deleteaddress/${id}`, {
                method: "DELETE"
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: "success",
                        title: "Address Deleted",
                        timer: 1500,
                        showConfirmButton: false
                    });

                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    Swal.fire("Error", data.message || "Something went wrong", "error");
                }
            });
        }
    });
}
</script>
<script src="/js/user/addressfile.js"></script>
</body>
</html>


