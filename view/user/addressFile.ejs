                    <%addressDoc.address.forEach((val)=>{%>
                    <div class="border border-gray-300 rounded-xl p-5 shadow-sm hover:shadow-md transition duration-150">
                        <div class="flex justify-between items-start mb-4">
                            <div class="text-gray-800 leading-relaxed">
                                <p class="text-lg font-semibold"><%=val.firstName%></p>
                                <p class="text-gray-600"><%=val.city%> <%=val.landMark%>, <%=val.state%></p>
                                <p class="text-gray-600">Pin Code: <%=val.pincode%></p>
                                <p class="mt-2 text-sm font-medium">Contact: +91<%=val.phone%></p>
                            </div>
                            <%if(val.isDefault){%>
                            <button class="flex-none self-start inline-flex items-center text-xs font-semibold text-indigo-600 bg-indigo-100 px-2 py-0.5 rounded-full">
                                Default
                            </button>
                            <%}%>
                        </div>
    
                        <div class="flex gap-3 mt-4 pt-3 border-t">
