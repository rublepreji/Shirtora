<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Enter New Password</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="/css/user/passwordReset.css">
</head>

<body class="bg-white min-h-screen flex items-center justify-center px-4">

  <div class="w-full max-w-xl mx-auto">
    
    <!-- Title -->
    <h1 class="text-3xl sm:text-4xl font-normal mb-10 text-left">
      Enter New Password
    </h1>

    <!-- Form -->
    <form class="space-y-10 w-full" id="resetForm">

      <!-- New Password -->
      <div>
        <input 
          type="password" 
          id="newPassword"
          placeholder="Enter new password"
          class="input-underline w-full text-lg"
        />
        <div id="error1" style="color: red;"></div>
      </div>

      <!-- Confirm Password -->
      <div>
        <input 
          type="password" 
          id="confirmPassword"
          placeholder="Confirm Password"
          class="input-underline w-full text-lg"
        />
        <div id="error2" style="color:red;"></div>
      </div>

      <!-- Buttons Row -->
      <div class="flex items-center justify-between pt-4">

        <!-- Back to Login -->
        <a href="/signin" class="text-sm sm:text-base text-gray-700 hover:underline">
          Back to Login
        </a>

        <!-- Continue Button -->
        <button
          type="submit"
          class="px-8 py-2 bg-black text-white text-sm sm:text-base rounded-sm hover:bg-gray-900 transition"
        >
          Continue
        </button>

      </div>
    </form>

  </div>

  <script src="/js/user/passwordReset.js"></script>

</body>
</html>
