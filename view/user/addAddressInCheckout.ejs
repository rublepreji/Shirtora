<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-slate-50 p-6 md:p-12">

<div class="max-w-2xl mx-auto p-6 bg-white rounded-xl shadow-md border border-slate-100">
  <h2 class="text-2xl font-bold text-slate-800 mb-6">Shipping Address</h2>
  
  <form id="addressForm" class="space-y-4" novalidate>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-slate-700">First Name</label>
        <input type="text" name="firstName" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-2.5 border">
        <span id="error-firstName" class="text-xs text-red-500 hidden mt-1 font-medium"></span>
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700">Last Name</label>
        <input type="text" name="lastName" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-2.5 border">
        <span id="error-lastName" class="text-xs text-red-500 hidden mt-1 font-medium"></span>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-slate-700">Email Address</label>
        <input type="email" name="email" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-2.5 border">
        <span id="error-email" class="text-xs text-red-500 hidden mt-1 font-medium"></span>
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700">Phone Number</label>
        <input type="tel" name="phone" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-2.5 border">
        <span id="error-phone" class="text-xs text-red-500 hidden mt-1 font-medium"></span>
      </div>
    </div>

    <div>
      <label class="block text-sm font-medium text-slate-700">Street Address</label>
      <input type="text" name="addressLine" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-2.5 border">
      <span id="error-address" class="text-xs text-red-500 hidden mt-1 font-medium"></span>
    </div>

    <div>
      <label class="block text-sm font-medium text-slate-700">Landmark (Optional)</label>
      <input type="text" name="landmark" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-2.5 border">
      <span id="error-landmark" class="text-xs text-red-500 hidden mt-1 font-medium"></span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <label class="block text-sm font-medium text-slate-700">District</label>
        <input type="text" name="district" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-2.5 border">
        <span id="error-district" class="text-xs text-red-500 hidden mt-1 font-medium"></span>
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700">State</label>
        <input type="text" name="state" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-2.5 border">
        <span id="error-state" class="text-xs text-red-500 hidden mt-1 font-medium"></span>
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700">Pincode</label>
        <input type="text" name="pincode" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-2.5 border">
        <span id="error-pincode" class="text-xs text-red-500 hidden mt-1 font-medium"></span>
      </div>
    </div>

    <div class="pt-2">
      <span class="block text-sm font-medium text-slate-700 mb-2">Address Type</span>
      <div class="flex items-center space-x-6">
        <label class="flex items-center cursor-pointer">
          <input type="radio" name="addressType" value="home" checked class="w-4 h-4 text-blue-600 border-slate-300 focus:ring-blue-500">
          <span class="ml-2 text-sm text-slate-600">Home</span>
        </label>
        <label class="flex items-center cursor-pointer">
          <input type="radio" name="addressType" value="work" class="w-4 h-4 text-blue-600 border-slate-300 focus:ring-blue-500">
          <span class="ml-2 text-sm text-slate-600">Work</span>
        </label>
      </div>
    </div>

    <div class="pt-4">
      <button type="submit" class="w-full bg-blue-600 text-white py-3 px-4 rounded-md font-semibold hover:bg-blue-700 transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        Save Address
      </button>
    </div>
  </form>
</div>

<script>
  const form = document.getElementById('addressForm');

  const validate = (data) => {
    const errors = {};
    const nameRegex = /^[A-Za-z\s]+$/;
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const phoneRegex = /^[6-9]\d{9}$/; 
    const pincodeRegex = /^\d{6}$/;

    if (!nameRegex.test(data.firstName) || data.firstName.trim().length < 3) {
      errors.firstName = "First name must be at least 3 letters.";
    }
    if (!nameRegex.test(data.lastName) || data.lastName.trim().length === 0) {
      errors.lastName = "Last name is required.";
    }
    if (!emailRegex.test(data.email)) {
      errors.email = "Please enter a valid email format.";
    }
    if (!phoneRegex.test(data.phone)) {
      errors.phone = "Enter a valid 10-digit phone number.";
    }
    if (data.addressLine.trim().length < 10) {
      errors.address = "Address must be at least 10 letters.";
    }

    // STRICT VALIDATION for District and State (Ensures they aren't empty)
    ['district', 'state'].forEach(field => {
      if (!data[field] || !nameRegex.test(data[field].trim())) {
        errors[field] = "This field is required and supports letters only.";
      }
    });

    if (data.landmark && !nameRegex.test(data.landmark)) {
      errors.landmark = "Landmark should only contain letters.";
    }

    if (!pincodeRegex.test(data.pincode)) {
      errors.pincode = "Pincode must be exactly 6 digits.";
    }

    return errors;
  };

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // 1. Reset Error UI
    document.querySelectorAll('[id^="error-"]').forEach(el => el.classList.add('hidden'));

    // 2. Collect Data
    const formData = new FormData(form);
    const formDataObj = Object.fromEntries(formData.entries()); 

    // 3. Run Validation
    const validationErrors = validate(formDataObj);

    if (Object.keys(validationErrors).length > 0) {
      for (const key in validationErrors) {
        const errorSpan = document.getElementById(`error-${key}`);
        if (errorSpan) {
          errorSpan.innerText = validationErrors[key];
          errorSpan.classList.remove('hidden');
        }
      }
      return; 
    }

    // 4. Proceed to Fetch
    try {
      const response = await fetch('/checkout/addaddress', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formDataObj),
      });

      // Rename this to 'result' to avoid conflict with 'data'
      const result = await response.json();

      if (response.ok) {   
        Swal.fire({
          title: 'Success!',
          text: result.message || 'Address saved successfully.',
          icon: 'success',
          confirmButtonColor: '#2563eb' 
        }).then(()=> window.location.href='/checkout');
        form.reset();
      } else {
        Swal.fire({ 
          title: 'Error',
          text: result.message || 'Something went wrong on the server.',
          icon: 'warning',
          confirmButtonColor: '#f59e0b' 
        });
      }
    } catch (error) {
      console.error("Fetch Error:", error);
      Swal.fire({
        title: 'Network Error',
        text: 'Unable to connect to the server. Please check your internet.',
        icon: 'error',
        confirmButtonColor: '#ef4444' 
      });
    }
  });
</script>
</body>
</html>